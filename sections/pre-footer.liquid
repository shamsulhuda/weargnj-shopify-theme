{% style %}
#section_{{ section.id }}{
  padding-top: {{ section.settings.padding_top | append:'px'}};
  padding-bottom: {{ section.settings.padding_bottom | append: 'px'}};
}
{% endstyle %}
<div class="weargnj__feature__area mt-80">
  <div class="container-fluid">
      <div class="row">
        {% for block in section.blocks %}
          <div class="col-lg-3">
              <div class="single__feature__card">
                  <div class="icon">
                      {% render 'icons', icon: block.settings.icon, size: block.settings.size  %}
                  </div>
                  <span class="feature__title">{{ block.settings.heading }}</span>
                  {{ block.settings.description }}
              </div>
          </div>
          {% endfor %}
          
      </div>
  </div>
</div>

{% schema %}
  {
    "name": "Pre Footer",
    "enabled_on": {
      "groups": ["footer"]
    },
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_dash",
        "label": "Enable Dash on top",
        "default": true
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 10
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 10
      }
    ],
    "blocks": [
      {
        "type": "card",
        "name": "Card",
        "settings": [
          {
            "type": "select",
            "id": "icon",
            "label": "Icon",
            "options": [
              {
                "label": "Shipping",
                "value": "shipping"
              },
              {
                "label": "Secure",
                "value": "secure"
              },
              {
                "label": "Underpant",
                "value": "underpant"
              },
              {
                "label": "Eco-power",
                "value": "eco-power"
              }
            ],
            "default": "shipping"
          },
          {
            "type": "number",
            "id": "size",
            "label": "Icon Size",
            "default": 56
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Shipping & Returns"
          },
          {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Get your item in 2-5 business days, and return them within 90 days of purchase.</p>"
          }
        ]
      }
    ]
  }
{% endschema %}
{% style %}
#footer_{{ section.id }}{
  padding-top: {{ section.settings.padding_top | append: 'px' }};
  padding-bottom: {{ section.settings.padding_bottom | append: 'px' }};  
  background-color: {{ section.settings.bg_color }};
}
.bg_container {
    border-radius: 8px 8px 0 0;
}
.newslater-inner {
  padding-right: 30px;
}
{% endstyle %}
<div class="weargnj__foooter mt-25 mx-2">
  <div class="container">
      <div class="row">
        {% for block in section.blocks %}
          {% case block.type %}
          {% when 'newsleter' %}
          <div class="col-lg-{{- block.settings.column -}}">
              <div class="footer__widget">
                  <a href="#" class="footer__logo mb-30 d-block">
                      {%- if block.settings.logo != blank -%}
                        {{ block.settings.logo | image_url: width:'auto' | image_tag }}
                    {%- else -%}
                      <span class="h2">{{ shop.name }}</span>
                    {%- endif -%}
                  </a>
                  {% if block.settings.text != blank %}
                  <span class="d-block bold__text">
                    {{ block.settings.text }}
                  </span>
                  {% endif %}
                  {% if block.settings.enable_newsleter %}
                  <form action="#" class="weargnj__newsletter">
                      <div class="newsletter__form">
                          <input type="email" placeholder="Sign up for our newsletter" name="email" required>
                          <button type="submit" class="submit__btn">
                              {% render 'icons', icon:'arrow-right' %}
                          </button>
                      </div>
                      <div class="d-flex align-items-center gap-3 mt-3">
                          <input type="checkbox" name="check" id="check">
                          <label for="check">I accept the terms of the newsletter</label>
                      </div>
                  </form>
                  {% endif %}
              </div>
          </div>
          {% when 'footer-menu' %}
          <div class="col-lg-{{- block.settings.column -}}">
              <div class="footer__widget">
                <div class="column">
                    <div class="menu__widget footer__widget__content">
                        <span class="widget__title">{{ block.settings.heading }}</span>
                        <ul>
                          {% for link in block.settings.menu.links %}
                            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                          {% endfor %}
                        </ul>
                    </div>
                </div>
              </div>
          </div>
          {% when 'information' %}
          <div class="col-lg-{{- block.settings.column -}}">
              <div class="footer__widget">
                <div class="column">
                    <div class="menu__widget footer__widget__content">
                        <span class="widget__title">{{ block.settings.heading }}</span>
                        <ul>
                            <li><a href="#">support@weargnj.io</a></li>
                            <li><a href="#">+37129275555</a></li>
                        </ul>
                        <div class="weargnj__social">
                            <a href="#"><img src="assets/icons/facebook.svg" alt=""></a>
                            <a href="#"><img src="assets/icons/instagram.svg" alt=""></a>
                            <a href="#"><img src="assets/icons/twitter.svg" alt=""></a>
                            <a href="#"><img src="assets/icons/linkedin.svg" alt=""></a>
                        </div>
                    </div>
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
      </div>   
      <div class="row">
            <div class="footer__copyright__wrapper">
                <p class="copyright">
                    &copy; 2024 weargnj All rights reserved.
                </p>
                <div class="payment__method">
  
                    <div class="method">
                        <img src="assets/img/card/1.png" alt="">
                    </div>
                    <div class="method">
                        <img src="assets/img/card/2.png" alt="">
                    </div>
                    <div class="method">
                        <img src="assets/img/card/3.png" alt="">
                    </div>
                    <div class="method">
                        <img src="assets/img/card/4.png" alt="">
                    </div>
                    <div class="method">
                        <img src="assets/img/card/5.png" alt="">
                    </div>
                    <div class="method">
                        <img src="assets/img/card/6.png" alt="">
                    </div>
  
                </div>
            </div>
        </div>
    </div>
</div>
{% schema %}
  {
    "name": "Footer",
    "enabled_on": {
      "groups": ["footer"]
    },
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 50
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 0
      }
    ],
    "blocks": [
      {
        "type": "footer-menu",
        "name": "Footer Menu",
        "settings": [
          {
            "type": "number",
            "id": "column",
            "label": "Column size",
            "default": 4,
            "info": "Total column length 12"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading"
          },
          {
            "type": "link_list",
            "id": "menu",
            "label": "Select Menu"
          }
        ]
      },
      {
        "type": "information",
        "name": "Information",
        "settings": [
          {
            "type": "number",
            "id": "column",
            "label": "Column size",
            "default": 4,
            "info": "Total column length 12"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading"
          },
          {
            "type": "html",
            "id": "information",
            "label": "Text"
          }
        ]
      },
      {
        "type": "newsleter",
        "name": "Newsleter",
        "settings": [
          {
            "type": "number",
            "id": "column",
            "label": "Column size",
            "default": 4,
            "info": "Total column length 12"
          },
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Brand logo"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Join thousands who love our products. 98% would buy again!</p>"
          },
          {
            "type": "checkbox",
            "id": "enable_newsleter",
            "label": "Enable Newsleter",
            "default": true
          }
        ]
      }
    ]
  }
{% endschema %}
{% schema %}
  {
    "name": "Footer",
    "enabled_on": {
      "groups": ["footer"]
    },
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 50
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 0
      }
    ],
    "blocks": [
      {
        "type": "footer-menu",
        "name": "Footer Menu",
        "settings": [
          {
            "type": "number",
            "id": "column",
            "label": "Column size",
            "default": 4,
            "info": "Total column length 12"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading"
          },
          {
            "type": "link_list",
            "id": "menu",
            "label": "Select Menu"
          }
        ]
      },
      {
        "type": "information",
        "name": "Information",
        "settings": [
          {
            "type": "number",
            "id": "column",
            "label": "Column size",
            "default": 4,
            "info": "Total column length 12"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading"
          },
          {
            "type": "html",
            "id": "information",
            "label": "Text"
          }
        ]
      },
      {
        "type": "newsleter",
        "name": "Newsleter",
        "settings": [
          {
            "type": "number",
            "id": "column",
            "label": "Column size",
            "default": 4,
            "info": "Total column length 12"
          },
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Brand logo"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Join thousands who love our products. 98% would buy again!</p>"
          },
          {
            "type": "checkbox",
            "id": "enable_newsleter",
            "label": "Enable Newsleter",
            "default": true
          }
        ]
      }
    ]
  }
{% endschema %}
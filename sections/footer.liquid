<div class="footer-section">
  <div class="container-fluid">
    <div class="container">
      <div class="row">
        {% for block in section.blocks %}
          {% case block.type %}
          {% when 'footer-menu' %}
          <div class="col-md-{{- block.settings.column -}}">
            <div class="heading">
              <h2>{{ block.settings.heading }}</h2>
            </div>
            <div class="content">
              <ul>
                {% for link in block.settings.menu.links %}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
                {% endfor %}
              </ul>
            </div>
          </div>
          {% when 'information' %}
          <div class="col-md-4">
            <div class="rte">
              {{ block.settings.information }}
            </div>
          </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Footer",
    "enabled_on": {
      "groups": ["footer"]
    },
    "settings": [],
    "blocks": [
      {
        "type": "footer-menu",
        "name": "Footer Menu",
        "settings": [
          {
            "type": "number",
            "id": "column",
            "label": "Column size",
            "default": 4,
            "info": "Total column length 12"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading"
          },
          {
            "type": "link_list",
            "id": "menu",
            "label": "Select Menu"
          }
        ]
      },
      {
        "type": "information",
        "name": "Information",
        "settings": [
          {
            "type": "number",
            "id": "column",
            "label": "Column size",
            "default": 4,
            "info": "Total column length 12"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Heading"
          },
          {
            "type": "html",
            "id": "information",
            "label": "Select Menu"
          }
        ]
      },
      {
        "type": "newsleter",
        "name": "Newsleter",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Brand logo"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Join thousands who love our products. 98% would buy again!</p>"
          },
          {
            "type": "checkbox",
            "id": "enable_newsleter",
            "label": "Enable Newsleter",
            "default": true
          }
        ]
      }
    ]
  }
{% endschema %}
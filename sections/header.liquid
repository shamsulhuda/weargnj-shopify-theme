  <style>
    .navbar-brand {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
    }
    .navbar-collapse {
      justify-content: space-between;
    }
    .right-icons {
      display: flex;
      gap: 15px;
    }
    @media (max-width: 768px) {
      .navbar-brand {
        position: relative;
        transform: none;
        margin-left: auto;
        margin-right: auto;
      }
    }
  </style>
{% assign links = section.settings.menu.links %}
<div class="header-area text-body">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
  
      <!-- Toggler for mobile view -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <!-- Navbar brand (logo) in the center -->
      <a class="navbar-brand" href="#">
        {% if section.settings.logo != blank %}
        {{ section.settings.logo | image_url: width:150 | image_tag }}
        {% else %}
        {{ shop.name }}
        {% endif %}
      </a>
  
      <!-- Navbar items and dropdown -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Menu 1
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="#">Submenu 1</a></li>
              <li><a class="dropdown-item" href="#">Submenu 2</a></li>
            </ul>
          </li>
          {% for link in links %}
          <li class="nav-item">
            <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
          </li>
          {% endfor %}
        </ul>
  
        <!-- Right side icons: cart, account, search -->
        <div class="right-icons">
          <a href="#" class="nav-link">
            <i class="bi bi-cart"></i> Cart
          </a>
          <a href="#" class="nav-link">
            <i class="bi bi-person"></i> Account
          </a>
          <a href="#" class="nav-link">
            <i class="bi bi-search"></i> Search
          </a>
        </div>
      </div>
    </div>
  </nav>
</div>
{% schema %}
{
  "name": "Header",
  "class": "header-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Select Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
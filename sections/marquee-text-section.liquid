<div class="weargnj__marque my-80">
  <div class="marque__wrapper overflow-hidden">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
              <div class="single__marque__item">
                  {% render 'icons', icon: block.settings.icon, size: block.settings.icon_size %}
                  <span>{{ block.settings.text }}</span>
              </div>
          </div>
        {% endfor %}          
      </div>
  </div>
</div>

{% schema %}
  {
    "name": "Marquee Section",
    "settings": [],
    "blocks": [
      {
        "type": "text",
        "name": "Marquee text",
        "settings": [
          {
            "type": "html",
            "id": "text",
            "label": "Text",
            "default": "<b>Free shipping</b> now and forever"
          },
          {
            "type": "select",
            "id": "icon",
            "label": "Select icon",
            "options": [
              {
                "label": "Award",
                "value": "award"
              },
              {
                "label": "Money back",
                "value": "money-back"
              },
              {
                "label": "Sale",
                "value": "sale-tag"
              }
            ],
            "default": "award"
          },
          {
            "type": "number",
            "id": "icon_size",
            "label": "Icon Size",
            "default": 48
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Marquee Text section",
        "blocks": [
          {
            "type": "text",
            "settings": {
              "icon": "award"
            }
          },
          {
            "type": "text",
            "settings": {
              "icon": "sale-tag"
            }
          },
          {
            "type": "text",
            "settings": {
              "icon": "money-back"
            }
          },
          {
            "type": "text",
            "settings": {
              "icon": "award"
            }
          }
        ]
      }
    ]
  }
{% endschema %}
{% style %}
  #quality_{{ section.id }}{
    padding-top: {{ section.settings.padding_top | append: 'px'}};
    padding-bottom: {{ section.settings.padding_bottom | append: 'px'}};
  }
{% endstyle %}
<div class="quality-section" id="quality_{{ section.id }}">
  Quality Section
  {% for block in section.blocks %}
  {% render 'icons', icon: block.settings.icon, size: block.settings.icon_size %}
  {% endfor %}
</div>
{% schema %}
  {
    "name": "Quality Section",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 30
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 30
      }
    ],
    "blocks": [
      {
        "type": "quality",
        "name": "Text",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "90-Day Quality Guarantee - Love it or itâ€™s on us"
          },
          {
            "type": "select",
            "id": "icon",
            "label": "Select Icon",
            "options": [
              {
                "label": "Package check",
                "value": "package-check"
              },
              {
                "label": "Underpant",
                "value": "underpants"
              },
              {
                "label": "Eco-power",
                "value": "eco-power"
              }
            ],
            "default": "package-check"
          },
          {
            "type": "range",
            "id": "icon_size",
            "label": "Icon Size",
            "min": 10,
            "max": 50,
            "step": 1,
            "unit": "px",
            "default": 24
          }
        ]
      }
    ]
  }
{% endschema %}
{{ 'quality-component.css' | asset_url | stylesheet_tag }}
{% style %}
  #quality_{{ section.id }}{
    padding-top: {{ section.settings.padding_top | append: 'px'}};
    padding-bottom: {{ section.settings.padding_bottom | append: 'px'}};
  }
{% endstyle %}
<div class="container-fluid quality-section" id="quality_{{ section.id }}">
  <div class="weargnj__feature">
    <div class="row">
        <div class="feature__wrapper">
          {% for block in section.blocks %}
            {% assign size = block.settings.size | default: 24 %}
            <div class="feature__bloc">
                <span class="icon">
                  {% render 'icons', icon: block.settings.icon, size: size %}            
                </span>
                <span>{{ block.settings.text }}</span>
            </div>
          {% endfor %}
        </div>
    </div>
</div>
</div>
{% schema %}
  {
    "name": "Quality Section",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 20
      }
    ],
    "blocks": [
      {
        "type": "quality",
        "name": "Text",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "90-Day Quality Guarantee - Love it or it’s on us"
          },
          {
            "type": "select",
            "id": "icon",
            "label": "Select Icon",
            "options": [
              {
                "label": "Package check",
                "value": "package-check"
              },
              {
                "label": "Underpant",
                "value": "underpants"
              },
              {
                "label": "Eco-power",
                "value": "eco-power"
              },
              {
                "label": "Sun",
                "value": "sun"
              }
            ],
            "default": "package-check"
          },
          {
            "type": "range",
            "id": "icon_size",
            "label": "Icon Size",
            "min": 10,
            "max": 50,
            "step": 1,
            "unit": "px",
            "default": 24
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Product Quality",
        "settings": {
          "padding_top": 20,
          "padding_bottom": 20,
        },
        "blocks": [
          {
            "type": "quality",
            "settings": {
              "text": "90-Day Quality Guarantee - Love it or it’s on us",
              "icon": "package-check",
              "icon_size": 24
            }
          },
          {
            "type": "quality",
            "settings": {
              "text": "True to size fit guarantee",
              "icon": "underpants",
              "icon_size": 24
            }
          },
          {
            "type": "quality",
            "settings": {
              "text": "Premium sustainable fabric",
              "icon": "eco-power",
              "icon_size": 24
            }
          }
        ]
      }
    ]
  }
{% endschema %}
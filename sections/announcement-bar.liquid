<div class="announcement-bar" id="{{ section.id }}">
  <div class="announcement-bar-inner">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link | default:'#' }}">{{ block.settings.text }}</a>
    {% endfor %}
  </div>
</div>

{% schema %}
    {
      "name": "Announcement-bar",
      "max_blocks": 12,
      "class": "announcement-bar-section",
      "enabled_on": {
        "groups": ["header"]
      },
      "settings": [
        
      ],
      "blocks": [
        {
          "type": "announcement",
          "name": "Announcement-bar",
          "settings": [
            {
              "type": "text",
              "id": "text",
              "default": "Speacial offer > get an extra 15% off + free delivery",
              "label": "Text"
            },
            {
              "type": "url",
              "id": "link",
              "label": "Link"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Announcement-bar",
          "blocks": [
            {
              "type": "announcement"
            }
          ]
        }
      ]
    }
{% endschema %}
    